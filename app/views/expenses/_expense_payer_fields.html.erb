


<div class="nested-fields">
  <% @group.users.each do |user| %>
    <div>
      <%= check_box_tag "expense[expense_payers_attributes][#{user.id}][user_id]", user.id, false, id: "expense_payer_#{user.id}" %>
      <%= label_tag "expense_payer_#{user.id}", user.email %>
      <%= number_field_tag "expense[expense_payers_attributes][#{user.id}][amount]", nil, placeholder: "Amount", id: "expense_payer_amount_#{user.id}" %>
    </div>
  <% end %>
</div>
