<div class="container-fluid w-50 shadow mt-5 rounded border p-4 bg">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-outline mb-4 text-light">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field form-outline mb-4 text-light">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-outline mb-4 text-light">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "form-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "actions mb-2 text-light btn btn-dark mt-3 " %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>